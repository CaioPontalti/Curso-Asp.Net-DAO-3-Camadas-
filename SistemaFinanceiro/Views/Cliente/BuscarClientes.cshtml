@using Model.Entity
@model List<Cliente>
@{
    ViewBag.Title = "Buscar Por Código";
}
<div class="panel panel-default">
    <div class="panel-heading" style="background:#2C3E50; color:#ffffff;"><h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Cliente por:</h2></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
        <div class="form-horizontal">
            <fieldset>
                <h2 style="text-align:left; font-family:Arial; font-weight:700;"></h2>
                <div>
                        <div class="row " style="padding-bottom:8px;">
                            <div class="row container-fluid">
                                <div class="form-group col-sm-8">
                                    @*@Html.Label("Nome", new { @class = "control-label col-md-4"})*@
                                    <div class="col-md-5">
                                        @Html.TextBox("txtnome", null, new { @class = "form-control", @placeholder = "Nome" })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("txtcpf", null, new { @class = "form-control", @id = "inputCPF", @placeholder = "CPF", oninput = "validaCampo()", onkeypress = "onlynumber()" })
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBox("txtcliente", null, new { @class = "form-control", @placeholder = "Código", onkeypress = "onlynumber()" })
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </fieldset>
        </div>

            <input class="btn btn-primary btn-lg" type="submit" value="Buscar" />
        }
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th style="background-color:#2C3E50;color:white">Código</th>
        <th style="background-color:#2C3E50;color:white">Nome</th>
        <th style="background-color:#2C3E50;color:white">CPF</th>
        <th style="background-color:#2C3E50;color:white">Endereço</th>
        <th style="background-color:#2C3E50;color:white">Telefone</th>
        <th colspan="3" style="background-color:#2C3E50;color:white">Operações</th>
    </tr>
    @foreach (var objCliente in Model)
    {
        <tr>
            <th>@objCliente.IdCliente</th>
            <th>@objCliente.Nome</th>
            <th>@objCliente.CPF</th>
            <th>@objCliente.Endereco</th>
            <th>@objCliente.Telefone</th>
            <td><a class="btn btn-success" href="~/Cliente/Find/@objCliente.IdCliente"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a class="btn btn-info" href="~/Cliente/Update/@objCliente.IdCliente"><span class="fa fa-edit"></span></a></td>
            <td><a class="btn btn-danger" href="~/Cliente/Eliminar/@objCliente.IdCliente"><span class="fa fa-book"></span></a></td>

        </tr>
    }
    <tr></tr>
</table>

@*Scritps de validação*@
@section scripts {

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/meuJavaScript.js"></script>
}